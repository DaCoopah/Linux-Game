import random

# This is our starting money
STARTING_MONEY = 100
    

def mine(money):
    print("1: Mine Ore")
    print("2: Go back")
    mine_input = input("input: ")
    if mine_input == "1":
        print("Would you like to mine some ore? [y/n]: ")
    if mine_input == "y":
        print("test")
    return money

def wood(money):
    print("1: Chop Wood")
    print("2: Go back")
    wood_input = input("input: ")
    if wood_input == "1":
        print("Would you like to chop some wood? [y/n]: ")   
    if wood_input == "y":
        money = money + 1
    print("Nice! You earned $1. Do you want to chop more wood? [y/n]: ")
    again_input = input("input: ")
    if again_input == "y":
        wood(money)
    if again_input == "n":
        return money
    return money

def makemoney(money):
    print("Welcome! There are many ways to make money, which one would you like to try?")
    print("1: Chop Wood")
    print("2: Mine Ore")
    print("3: Back to menu")
    make_money_input = input("input: ")
    if make_money_input == "1":
         wood(money)
    elif make_money_input == "2":
        mine(money)
    elif make_money_input == "3":
        return money
    else:
        print("Wrong command, try again with a number 1-3!")

    return money

def gamble(money):
    gamble_result = random.randrange(1, 3)
    gamble_input = int(input("How much money do you want to gamble?: "))
    if gamble_input > money:
        print("Too broke! Try again")
    elif gamble_input < 0:
        print("Too broke! Try again")
    else:
        # Time to gamble!
        if gamble_result == 1:
            money += gamble_input
            print(f"You won! Money equals: {money}")

        if gamble_result == 2:
            money -= gamble_input
            if money > 0:
                print(f"You lost :( Money equals: {money}")

        if money == 0:
            print(f"You're Broke! Money equals: {money}")
            user_input = input("Do you want to restart? [y/n]: ")
            if user_input == "y":
                money = 100
                print("Okay, but take a break man! Linda hasn't seen you in days!")
            if user_input == "n":
                "Ok, thanks for playing!"
        else:
            user_input = input("Do you want to gamble again? [y/n]: ")
            if user_input == "y":
                gamble(money)
    return money


def menu(money):
    """
    :param int money:
    :return:
    """
    print("Welcome! What would you like to do?")
    print("1: Make Money")
    print("2: Gamble")
    print("3: Check Balance")
    print("4: Quit")
    menu_input = input("input: ")
    if menu_input == "1":
        money = makemoney(money)
    elif menu_input == "2":
        money = gamble(money)
    elif menu_input == "3":
        print(f"Account Balance: {money}")
    elif menu_input == "4":
        return

    else:
        print("Enter an input between 1-4 pls")
    if money == 0:
        return
    menu(money)

# This is where we start our program!
menu(STARTING_MONEY)
