import random

# This is our starting money
STARTING_MONEY = 100


def gamble(money):
    gamble_result = random.randrange(1, 3)
    gamble_input = int(input("How much money do you want to gamble?: "))
    if gamble_input > money:
        print("Too broke! Try again")
    elif gamble_input < 0:
        print("Too broke! Try again")
    else:
        # Time to gamble!
        if gamble_result == 1:
            money += gamble_input
            print(f"You won! Money equals: {money}")

        if gamble_result == 2:
            money -= gamble_input
            if money > 0:
                print(f"You lost :( Money equals: {money}")

        if money == 0:
            print(f"You're Broke! Money equals: {money}")
            user_input = input("Do you want to restart? [y/n]: ")
            if user_input == "y":
                money = 100
                print("Okay, but take a break man! Linda hasn't seen you in days!")
            if user_input == "n":
                "Ok, thanks for playing!"
        else:
            user_input = input("Do you want to gamble again? [y/n]: ")
            if user_input == "y":
                gamble(money)
    return money


def menu(money):
    """
    :param int money:
    :return:
    """
    print("Welcome! What would you like to do?")
    print("1: Gamble")
    print("2: Check Balance")
    print("3: Quit")
    menu_input = input("input: ")
    if menu_input == "1":
        money = gamble(money)
    elif menu_input == "2":
        print(f"Account Balance: {money}")
    elif menu_input == "3":
        return
    else:
        print("Enter an input between 1-3 you stupid loser")
    if money == 0:
        return
    menu(money)

# This is where we start our program!
menu(STARTING_MONEY)
